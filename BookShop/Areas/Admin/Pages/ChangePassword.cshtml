@page
@model BookShop.Areas.Admin.Pages.ChangePasswordModel
@{
    Layout = "_Admin";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5>تغییر کلمه عبور </h5>
            </div>
            <hr />
            @if (string.IsNullOrEmpty(ViewData["Alert"] as string) && string.Equals(ViewData["Alert"], "Alert"))
            {
                <div class="alert alert-success alert-dismissable">
                    @ViewBag.Alert
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <form method="post">
                    <div class="form-group col-md-6">
                        <label asp-for="@Model.ChangePasswordInputModel.OldPassword"></label>
                        <input asp-for="@Model.ChangePasswordInputModel.OldPassword" class="form-control" />
                        <span asp-validation-for="@Model.ChangePasswordInputModel.OldPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="@Model.ChangePasswordInputModel.NewPassword"></label>
                        <input asp-for="@Model.ChangePasswordInputModel.NewPassword" class="form-control" />
                        <span asp-validation-for="@Model.ChangePasswordInputModel.NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="@Model.ChangePasswordInputModel.ConfirmPassword"></label>
                        <input asp-for="@Model.ChangePasswordInputModel.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="@Model.ChangePasswordInputModel.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary float-left">تغییر کلمه عبور</button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}