
<div class="card-body">
    @if (!string.IsNullOrEmpty(ViewBag.Alert))
    {
        <div class="alert alert-success alert-dismissable">
            @ViewBag.Alert
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
</div>