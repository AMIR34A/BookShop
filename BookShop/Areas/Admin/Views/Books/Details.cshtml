@using System.Globalization;
@model ReadAllBook
@inject PersianCalendar date

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-light">
                اطلاعات کتاب @Model.Title
            </div>
            <div class="card-body">
                <row>
                    <div class="col-md-3">
                        <img src="~/images/Book.png" height="250" />
                    </div>
                    <div class="col-md-9">
                        <div class="row">
                            <div class="col-md-6">
                                <p>عنوان : @Model.Title</p>
                                <p>شابک : @Model.ISBN</p>
                                <p>سال انتشار : @Model.PublishYear</p>
                                <p>قیمت : @Model.Price</p>
                                <p>موجودی : @Model.Stock</p>
                                <p>تعداد صفحات : @Model.NumOfPage</p>
                                <p>زبان کتاب : @Model.LanguageName</p>
                                <p>ناشر : @Model.PublisherName</p>
                            </div>
                            <div class="col-md-6">
                                <p>
                                    نویسندگان :
                                    @Model.Authors
                                </p>
                                <p>
                                    مترجمان:
                                    @Model.Translators
                                </p>
                                <p>
                                    دسته بندی ها:
                                    @Model.Categories
                                </p>
                                <p>تاریخ انتشار : @date.GetYear(Model.PublishedTime.Value)</p>
                                <p>
                                    @{
                                        var status = Model.IsPublished.Value? "منتشر شده" : "پیش نویس";
                                    }
                                    <span>@status</span>
                                </p>
                            </div>
                        </div>

                    </div>
                    <div class="col-md-12">
                        <hr />

                        <p>
                            خلاصه کتاب : @Model.Summary
                        </p>
                    </div>
                </row>
            </div>
        </div>
    </div>
</div>

