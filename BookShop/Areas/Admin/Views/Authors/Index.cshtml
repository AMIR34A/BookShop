@model IEnumerable<EntityFrameworkCore.Models.Author>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-light">
                نویسندگان
            </div>
            <div class="card-body">
                <p>
                    <a asp-action="Create">افزودن نویسنده جدید</a>
                </p>
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LastName)
                            </th>
                            <th>
                                مشاهده کتاب ها
                            </th>
                            <th>
                                عملیات
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LastName)
                                </td>
                                <td>
                                    <a class="btn btn-info" asp-action="AuthorBooks" asp-route-id="@item.AuthorId">مشاهده کتاب ها</a>
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.AuthorId" class="btn btn-success btn-icon">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.AuthorId" class="btn btn-info btn-icon">
                                        <i class="fa fa-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.AuthorId" class="btn btn-danger btn-icon">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>